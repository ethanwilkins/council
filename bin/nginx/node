server {
    listen 80;
    listen [::]:80;
  	root /home/node/council/client/build;
  	index index.html;
    server_name socialmaya.com;

    location / {
  		proxy_pass http://localhost:5000/;
  		proxy_http_version 1.1;
  		proxy_set_header Upgrade $http_upgrade;
  		proxy_set_header Connection 'upgrade';
  		proxy_set_header Host $host;
  		proxy_cache_bypass $http_upgrade;
    }

    location ~ /.well-known {
        allow all;
    }

    include /etc/nginx/snippets/letsencrypt.conf;

    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/socialmaya.com-0002/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/socialmaya.com-0002/privkey.pem; # managed by Certbot

    if ($scheme != "https") {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = $server_addr) {
        return 301 https://socialmaya.com$request_uri;
    } # to fix redirection from IP
}
